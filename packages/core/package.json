{
  "name": "@humanizer/core",
  "version": "0.1.0",
  "description": "Platinum Agent System - Core infrastructure for multi-agent coordination",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime/index.d.ts",
      "import": "./dist/runtime/index.js"
    },
    "./bus": {
      "types": "./dist/bus/index.d.ts",
      "import": "./dist/bus/index.js"
    },
    "./vimalakirti": {
      "types": "./dist/vimalakirti/index.d.ts",
      "import": "./dist/vimalakirti/index.js"
    },
    "./canon": {
      "types": "./dist/canon/index.d.ts",
      "import": "./dist/canon/index.js"
    },
    "./doctrine": {
      "types": "./dist/doctrine/index.d.ts",
      "import": "./dist/doctrine/index.js"
    },
    "./instruments": {
      "types": "./dist/instruments/index.d.ts",
      "import": "./dist/instruments/index.js"
    },
    "./ucg": {
      "types": "./dist/ucg/index.d.ts",
      "import": "./dist/ucg/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "humanizer",
    "agents",
    "multi-agent",
    "coordination",
    "vimalakirti"
  ],
  "license": "UNLICENSED"
}
