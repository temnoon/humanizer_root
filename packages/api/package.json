{
  "name": "@humanizer/api",
  "version": "0.1.0",
  "description": "Humanizer API - HTTP server wrapping UnifiedAuiService",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.2",
    "@humanizer/core": "file:../core",
    "@humanizer/npe": "file:../npe",
    "dotenv": "^17.2.3",
    "hono": "^4.4.0",
    "jose": "^6.1.3"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "humanizer",
    "api",
    "hono",
    "aui"
  ],
  "license": "UNLICENSED"
}
